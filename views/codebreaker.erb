<html>
<head>
	<meta charset="utf-8">
	<title>MasterMind</title>
	<link rel="stylesheet" href="style.css" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
</head>
<body>
	<p> Mastermind 
		<form method="post" action="newGame" >
			<input type="submit" name="newGame" value="New Game">
		</form>
	</p>
	
	<% if  @turns_left > 0 %>
	<form method="post" >
		<input type = "text" name ="input"/>
		<input type = "submit" name ="enterGuess" value = "Enter"/>
		<%end%>
	</form>


	<% if !@input.nil? && @input.length > 4%>
	<p> <%= @input %> </p>
	<% end%>



	<% if !@message.nil? %>
	<p><%= @message %></p>
	<%end%>

	<% if !@output.nil? %>
	<% @output.each do |line| %>
	<%=line %> <br>
	<%end%>

	<% end%>


	<% if !@win_message.nil? %>
	<p> <%= @win_message %> </p>
	<% end%>

</body>
</html>